                </Button>
                <Button Content="POWERUP1" Height="90" Width="370" ></Button>
                <Image Source="Assets/Money.png" Height="55" Width="47"></Image>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >
                <Button  VerticalAlignment="Bottom"  HorizontalAlignment="Right" >
                    <Image Source="/Assets/P.png" Stretch="UniformToFill" HorizontalAlignment="Center"  Width="100" Height="100"/>
                </Button>
                <Button Content="POWERUP1" Height="90" Width="370" ></Button>
                <Image Source="Assets/Money.png" Height="55" Width="47"></Image>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >
                <Button  VerticalAlignment="Bottom"  HorizontalAlignment="Right" >
                    <Image Source="/Assets/P.png" Stretch="UniformToFill" HorizontalAlignment="Center"  Width="100" Height="100"/>
                </Button>
                <Button Content="POWERUP1" Height="90" Width="370" ></Button>
                <Image Source="Assets/Money.png" Height="55" Width="47"></Image>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" >
                <Button  VerticalAlignment="Bottom"  HorizontalAlignment="Right" >
                    <Image Source="/Assets/P.png" Stretch="UniformToFill" HorizontalAlignment="Center"  Width="100" Height="100"/>
                </Button>
                <Button Content="POWERUP1" Height="90" Width="370" ></Button>
                <Image Source="Assets/Money.png" Height="55" Width="47"></Image>
            </StackPanel>


        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1" Height="200" Width="600" VerticalAlignment="Top" Margin="90">
            <Border.Background>
                <ImageBrush ImageSource="Assets/Panel.png"></ImageBrush>
            </Border.Background>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Info sobre el powerup"  VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"></TextBlock>
            </StackPanel>
        </Border>
        <StackPanel VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"  Height="133" Margin="50">
            <TextBlock Text="Elementals" TextAlignment="Center"></TextBlock>
