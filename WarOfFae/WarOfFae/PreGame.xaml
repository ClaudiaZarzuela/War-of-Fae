                            <Image Source="Assets/Personaje 1.png" Height="51" Margin="-14,-5,-14,-5"/>
                        </Button>
                        <Button Style="{StaticResource Mapa_Line}">
                            <Image Source="Assets/Personaje 2.png" Height="51" Margin="-14,-5,-14,-5"/>
